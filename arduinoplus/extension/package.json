{
  "name": "arduinoplus",
  "displayName": "Arduino+",
  "description": "Essential IDE helpers for Arduino development",
  "version": "1.0.0",
  "publisher": "MonsterMaker",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "keywords": [
    "arduino",
    "arduinoIDE",
    "comment",
    "toggle",
    "editor",
    "tools",
    "snippets",
    "anchors",
    "bookmarks",
    "navigation"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "arduinoplus.toggleLineComment",
        "title": "// Toggle Line Comment",
        "category": "Arduino+",
        "icon": "$(symbol-operator)"
      },
      {
        "command": "arduinoplus.copyToSnippets",
        "title": "Copy to Snippets",
        "category": "Arduino+",
        "icon": "$(files)"
      },
      {
        "command": "arduinoplus.moveToSnippets",
        "title": "Move to Snippets",
        "category": "Arduino+",
        "icon": "$(arrow-right)"
      },
      {
        "command": "arduinoplus.openSnippetPanel",
        "title": "Open Snippet Panel",
        "category": "Arduino+",
        "icon": "$(list-unordered)"
      },
      {
        "command": "arduinoplus.setAnchor",
        "title": "Set Anchor",
        "category": "Arduino+",
        "icon": "$(bookmark)"
      },
      {
        "command": "arduinoplus.showAnchors",
        "title": "Show Anchors",
        "category": "Arduino+",
        "icon": "$(list-flat)"
      },
      {
        "command": "arduinoplus.duplicateLine",
        "title": "Duplicate Line Down",
        "category": "Arduino+",
        "icon": "$(files)"
      }
    ],
    "keybindings": [
      {
        "command": "arduinoplus.toggleLineComment",
        "key": "ctrl+/",
        "mac": "cmd+/",
        "when": "editorTextFocus"
      },
      {
        "command": "arduinoplus.setAnchor",
        "key": "ctrl+shift+b",
        "mac": "cmd+shift+b",
        "when": "editorTextFocus"
      },
      {
        "command": "arduinoplus.showAnchors",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorTextFocus"
      },
      {
        "command": "arduinoplus.duplicateLine",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "arduinoplus.toggleLineComment",
          "group": "1_arduinoplus@1"
        },
        {
          "command": "arduinoplus.duplicateLine",
          "group": "1_arduinoplus@2"
        },
        {
          "command": "arduinoplus.copyToSnippets",
          "group": "1_arduinoplus@3",
          "when": "editorHasSelection"
        },
        {
          "command": "arduinoplus.moveToSnippets",
          "group": "1_arduinoplus@4",
          "when": "editorHasSelection"
        },
        {
          "command": "arduinoplus.openSnippetPanel",
          "group": "1_arduinoplus@5"
        },
        {
          "command": "arduinoplus.setAnchor",
          "group": "1_arduinoplus@6"
        },
        {
          "command": "arduinoplus.showAnchors",
          "group": "1_arduinoplus@7"
        }
      ]
    }
  },
  "scripts": {
    "package": "vsce package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/NikolaiRadke/Arduinoplus"
  },
  "license": "Apache-2.0"
}
